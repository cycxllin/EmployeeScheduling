<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/validweek"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@drawable/ic_green_rectangle"
    android:orientation="vertical"
    android:overlapAnchor="true">


    <TextView
        android:id="@+id/valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not all available employees have a shift. Would you still like to export schedule?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flopbtn"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/ic_green_rectangle"
        android:text="@string/cancel"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slaybtn"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/ic_green_rectangle"
        android:text="Yes"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>